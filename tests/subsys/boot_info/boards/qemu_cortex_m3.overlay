#include <common/mem.h>

/ {
	sram_2000FC00: sram@2000FC00 {
		compatible = "zephyr,memory-region", "mmio-sram";
		reg = <0x2000FC00 0x400>;
                zephyr,memory-region = "FlashSim";
                status = "okay";
        };

        soc {
                sim_flash_controller: sim-flash-controller@0 {
	                compatible = "zephyr,sim-flash";
                        reg = <0x0 0x1>;

			#address-cells = <1>;
		        #size-cells = <1>;
		        erase-value = <0xff>;
                        memory-region = <&sram_2000FC00>;

			flash_sim0: flash_sim@0 {
			        status = "okay";
			        compatible = "soc-nv-flash";
			        erase-block-size = <0x400>;
			        write-block-size = <1>;
			        reg = <0x00000000 0x400>;

                                partitions {
		                        compatible = "fixed-partitions";
		                        #address-cells = <1>;
		                        #size-cells = <1>;

		                        bi_partition: partition@0 {
			                        label = "bootinfo";
			                        reg = <0x00000000 0x400>;
		                        };
	                        };
                        };
                };
        };

        boot_info: boot_info {
                compatible = "zephyr,boot-info-flash";
                backend = <&bi_partition>;
                size = <0x400>;
        };

        aliases {
                bi = &boot_info;
        };

};

&sram0 {
	reg = <0x20000000 0xFC00>;
};
